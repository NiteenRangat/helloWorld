<html>
<head> <title> My Operation Program </title>
<script>
function add(){
var num1 = document.getElementById("num1").value;
var num2 = document.getElementById("num2").value;
var res = +num1 + +num2;
document.getElementById("result").innerHTML = res;
}

function sub(){
var num1 = document.getElementById("num1").value;
var num2 = document.getElementById("num2").value;
var res = +num1 - +num2;
document.getElementById("result").innerHTML = res;
}

function mult(){
var num1 = document.getElementById("num1").value;
var num2 = document.getElementById("num2").value;
var res = +num1 * +num2;
document.getElementById("result").innerHTML = res;
}

function devi(){
var num1 = document.getElementById("num1").value;
var num2 = document.getElementById("num2").value;
var res = +num1 / +num2;
document.getElementById("result").innerHTML = res;
}
</script>
</head>
<body> 
<div>First Number :<input type="number" name="num1" id="num1"/> </div>
<div>Second Number :<input type="number" name="num2" id="num2"/>  </div>
<div><p id="result"></p></div>
<button onclick="add()"> Add </button>
<button onclick="sub()"> Sub </button>
<button onclick="mult()"> Multi </button>
<button onclick="devi()"> Devi </button>
</body>
</html>
